<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>NightWalker Order Confirmation</title>
    <link href="../email_templates/reset.css" media="all" rel="stylesheet" type="text/css" />
    <link href="../email_templates/order_confirmation/style.css" media="all" rel="stylesheet" type="text/css" />
  </head>

  <body itemscope itemtype="http://schema.org/EmailMessage">

  <table class="body-wrap">
    <tr>
      <td></td>
        <td class="container" width="600">
          <div class="content">
            <table class="main" width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td class="content-wrap aligncenter">
                  <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                      <td class="content-block">
                         <h1 class="aligncenter">Thanks for shopping at NightWalker</h1>
                      </td>
                    </tr>
                    <tr>
                      <td class="content-block">
                          <h2 class="aligncenter">Your purchase is on its way</h2>
                      </td>
                    </tr>
                    <tr>
                      <td class="content-block aligncenter">
                        <table class="invoice">
                            <tr>
                                <td>
                                   <%= firstName %> <%= lastName %>
                                   <br>
                                    Order #<%= orderNumber %>
                                   <br>
                                     Tracking #<%= trackingCode %>
                                   <br>
                                   <br>
                                     <%= address1 %>
                                   <br>
                                   <br>
                                     <%= address2 %>
                                   <br>
                                   <br>
                                     <%= city %>
                                   <br>
                                   <br>
                                     <%= state %>
                                   <br>
                                   <br>
                                     <%= zip %>
                                   <br>
                                </td>
                            </tr>
                            <tr>
                              <td>
                                <table class="invoice-items" cellpadding="0" cellspacing="0">
                                  <% for (let i = 0; i < items.length; i++) { %>
                                  <tr>
                                    <td><%= items[i].description %> in <%= items[i].flavor %>. Size <%= items[i].sizes.waistSize %> x <%= items[i].sizes.inseam %></td>
                                    <td class="alignright">$ <%= (items[i].currentPrice / 100).toFixed(2) %></td>
                                  </tr>
                                  <% } %>
                                  <tr class="total">
                                    <td class="alignright" width="80%">Total</td>
                                    <td class="alignright">$ <%= (totalCost / 100).toFixed(2) %></td>
                                 </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                        </td>
                    </tr>
                    <tr>
                      <td class="content-block aligncenter">
                        LOGO GOES HERE
                      </td>
                    </tr>
                    <tr>
                      <td class="content-block aligncenter">
                        Acme Inc. 123 Van Ness, San Francisco 94102
                    </td>
                    </tr>
              </table>
                </td>
              </tr>
              </table>
           <div class="footer">
            <table width="100%">
             <tr>
              <td class="aligncenter content-block">Questions? Email <a href="mailto:">support@acme.inc</a></td>
            </tr>
           </table>
          </div>
        </div>
      </td>
      <td></td>
      </tr>
    </table>
  </body>
</html>
