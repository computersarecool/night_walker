/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$nectarine_gallery_name = 'nectarine-gallery';
$nectarine_gallery_x = 0px;
$nectarine_gallery_y = 0px;
$nectarine_gallery_offset_x = 0px;
$nectarine_gallery_offset_y = 0px;
$nectarine_gallery_width = 1230px;
$nectarine_gallery_height = 2000px;
$nectarine_gallery_total_width = 1230px;
$nectarine_gallery_total_height = 2000px;
$nectarine_gallery_image = '../images/sprites/front_sprites.jpg';
$nectarine_gallery = 0px 0px 0px 0px 1230px 2000px 1230px 2000px '../images/sprites/front_sprites.jpg' 'nectarine-gallery';
$front_sprites_width = 1230px;
$front_sprites_height = 2000px;
$front_sprites_image = '../images/sprites/front_sprites.jpg';
$front_sprites_sprites = $nectarine_gallery;
$front_sprites = 1230px 2000px '../images/sprites/front_sprites.jpg' $front_sprites_sprites;

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

/*
The `sprites` mixin generates identical output to the CSS template
  but can be overridden inside of Stylus

This must be run when you have at least 2 sprites.
  If run with a single sprite, then there will be reference errors.

sprites($spritesheet_sprites);
*/
sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name} {
      sprite($sprite);
    }
  }
}
