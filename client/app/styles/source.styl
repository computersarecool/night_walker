// End of Modal cart

// Nav
site-nav
  position relative
  z-index 1

nav
  position absolute
  float left
  padding .25em 0 0 .5em

nav li
  margin-bottom .5em

nav li a
  text-transform uppercase
  font-weight 700
  font-size 1.5em

nav li:nth-child(1) > a
  color proton-powder

nav li:nth-child(2) > a
  padding-right .6em
  color electricity

nav li:nth-child(3) > a
  color plum-crazy

nav.horizontal
  position static
  width: 100%
  background white
  border-bottom .25em solid black
  padding 0 0 0 .15em

nav.horizontal ul
  display flex
  padding 0 0.3em

nav.horizontal li
  flex 1
  display inline-block
  margin .1em 0 0 0

nav ul.collapsed
  max-width 0
  transition max-width .2s

// End of Nav

// Main div and pages
div.main
  flex 1
  position relative
  z-index 0
  opacity .99 // opacity added for z-index

// Gallery page
img.gallery
  position absolute
  height: 100%
  right -2em
  z-index -3
  opacity 1

img.gallery.front
  z-index 0
    
img.gallery.next
  z-index -2    
  
img.gallery.fade
  z-index -1
  opacity 0
  transition opacity cubic-bezier(.25, .25, .75, .75) .5s

.loading-gallery.done-loading
  display none

// End of gallery page


// Shop page
.collection.container
  display flex
  flex-direction column
  
div.poster-container
  flex 1
  border-bottom .4em solid black
  display flex
  flex-direction column
  align-items center

div.poster-container:last-child
  border 0

img.poster
  flex 1
  width 70%

div.poster-container a
  flex 1
  text-align center
  text-transform uppercase
  font-weight 700
  color black

// End shop page


// Product page
.product.container
  text-align center

  // Product gallery
.individual-gallery
  position relative
  overflow hidden

.gallery-holder
  position relative
  overflow hidden
  width 400%
  padding-left 18%

.individual-main
  width 21.5%
  float left
  padding-right 2.95em

.gallery-picker
  appearance none
  width 1.2em
  height 1.2em
  border-radius 50%
  background electricity
  border .175em solid electricity
      
.gallery-picker:checked
  border .175em solid proton-powder

  // End of product gallery

  // Lower page details
.product-title
  font-weight 700

.left-ui
  margin-top .5em
  float left
  clear right
  margin-left 1.3em

.right-ui
  margin-top .5em
  float right
  margin-right 1.3em

  // Buttons
.product-button
  border none
  background white
  padding 0
  float right
  clear right

.product-select
  float right
  clear right

// Item details
.details
  position absolute
  text-align left
  width 100%
  min-height 40vh // so that the chart never collapses
  z-index 3
  background rgba(111, 111, 111, 0.88)
  clear both
  display block

.details.display-none
  display none

.detail-tab
  float left

.details li
  font-size .9em
  line-height 1.4em

.detail-tab label
  position relative
  margin-right 2em
  color black

.detail-tab ul
  display none
  position absolute
  width 100%
  left 0
  border-top .4vh solid white
  padding-top 1vh
  
[type=radio]:checked ~ label
  color white

[type=radio]:checked ~ label ~ ul
  display block
    
.detail-tab input
  display none
        
.detail-tab, .care
  color white

button.close
  position absolute
  bottom 0
  right 0
  color red
  
  // End of item details

  // Size Chart
.table-holder
  position absolute
  background rgba(111, 111, 111, 0.96)
    
table
  font-size 1em
  border 1px solid black

caption
  text-align left
  
caption h1
  font-size .9em
  font-weight 700

caption p
  padding-top 1.5vh
  padding-bottom .5vh
  font-size 3vh
  font-weight 400  

th
  font-weight 600
  border-right 2px solid black
  
td
  border 1px solid black  

.sizing-copy
  width 50%
  padding margin 5%
  float left

.sizing-guide
  float right
  width 50%

button.size-guide
  position relative
  float right
  margin-right .125em

  // End of Size Chart
  
