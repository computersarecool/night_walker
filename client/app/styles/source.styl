@require 'front_sprites'
@require 'homepage_sprites'
html, body, .main
  width 100%
  height 100%
  
body
  background white

// Sprites
// Homepage sprites
.apple-gs
  sprite($apple)

.cherry-gs
  sprite($cherry)

.electricity-gs
  sprite($electricity)

.nectarine-gs
  sprite($nectarine)

.plum_crazy-gs
  sprite($plum_crazy)

.powder-gs
  sprite($powder)

.proton_powder-gs
  sprite($proton_powder)  

.gray-gs
  sprite($gray)
  
// Shop Page Sprites
.apple-pant
  sprite($apple_individual)
  
.cherry-pant
  sprite($cherry_individual)
  
.electricity-pant
  sprite($proton_powder_individual)
  
.lemon-pant
  sprite($lemon_individual)
  
.nectarine-pant
  sprite($nectarine_individual)
  
.plum-crazy-pant
  sprite($plum_crazy_individual)

.powder-pant
  sprite($powder_individual)
  
.proton-powder-pant
  sprite($proton_powder_individual)
// End of Sprites

.pant-container
  height 75%
  width 25%
  display inline-block
  vertical-align top
  position relative

.pant-text
  width 100%
  position absolute
  bottom 0
  text-align: center 

.pant-sprite
  width 300px
  height 300px
  border 2px solid red

.gray-pant
  border 4px solid green

// Animation
.gallery-animate
  transition all cubic-bezier(1, .01, .33, 1) .5s
  opacity 0

.gallery-animate.displayed
  transition all cubic-bezier(1, .01, .57,1) 2s
  opacity 1

.fast-gray
  transition all cubic-bezier(.83, .04, .65, .93) .4s
  opacity 1

.fast-no-gray
  transition all cubic-bezier(.83, .04, .65, .93) .4s
  opacity 0
// End of animation
