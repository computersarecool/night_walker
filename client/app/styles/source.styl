// Selective Meyer reset
html, body, div, span, h1, h2, h3, h4, h5, h6, p, pre, a, code, img, var, b, i, center, ol, ul, li, fieldset, form, label, legend, table, tbody, tfoot, thead, tr, th, td, article, aside, canvas, footer, header, nav, section, time, mark, audio, video
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  font inherit
  vertical-align baseline
 
body
  line-height 1
  
ol, ul
  list-style none
  
a:focus
  outline 0

table
  border-collapse collapse
  border-spacing 0
// End of reset


// Begin styles
// Globals
// Variables
cube-size = 7vw

// Color Variables
cherry = #c71b39
nectarine = #fa5132
lemon = #feda60
apple = #005b3a
electricity = #26599a
plum-crazy = #3f2c63
powder = #e45c68
proton-powder = #ed243f
gray-cover = #6f6f6f

// Custom directives
site-header, site-gallery, site-nav, size-guide
  display block

// General items
*, *:before, *:after
  box-sizing inherit
  outline none

html, body
  box-sizing border-box
  font-family 'Arial', sans-serif
  height 100%

.hidden
  visibility hidden

.display-none
  display none

// All links
a:link, a:visited
  text-decoration none

small.warning
  color cherry

.link-container
  display inline-block

body
  display flex
  flex-direction column

// Header
site-header
  width 100%
  border-bottom .25em solid black
  padding-top .2em

// Header logo
header a.logo
  width 80%
  padding-left .3em
  vertical-align top

img.header
  width 100%
  height auto

// Modal cart
site-cart
  width 15%
  display inline-block

// Cube
.wrap
  margin-left 25%
  bottom .1em
  margin-top .1em
  perspective: (cube-size * 3)
  perspective-origin: (cube-size / 2) (cube-size / 2)

.cart-cube
  position relative
  width cube-size
  height cube-size
  transform-style: preserve-3d;
  //animation spin 5s infinite linear

.cart-cube div
  position absolute
  width cube-size
  height cube-size
  box-shadow inset 0 0 1vw rgba(125,125,125,0.8)
  text-align center
  line-height cube-size

.back
  transform rotateY(180deg) translateZ(-(cube-size / 2))

.right
  transform-origin top right
  transform rotateY(-270deg) translateX((cube-size / 2))

.left
  transform-origin center left
  transform rotateY(270deg) translateX(-(cube-size / 2))

.top
  transform-origin top center
  transform rotateX(-90deg) translateY(-(cube-size / 2))

.bottom
  transform-origin bottom center
  transform rotateX(90deg) translateY((cube-size / 2))

.front
  transform translateZ(cube-size / 2)


@keyframes spin
  from {
    transform: rotate(0)
  }
  to {
    transform:rotate(359deg)
  }

site-cart .item-count
  text-align center
  color plum-crazy
  box-shadow none
  text-shadow 1px 1px 4px proton-powder
  transform translateZ(0)
  //End of Cube

.cart-container
  color white
  z-index 2
  margin-top .4em
  position fixed
  left 0
  font-size 1.1em
  line-height 1.5em
  width 100%
  background gray-cover

.checkout-options
  float left
  clear left

.cart-container p
  padding-left 9%

.cart-header
  border-bottom .125em solid white

.cart-container a
  color electricity

.cart-container a:active
  background-color electricity

