// Selective Meyer reset
html, body, div, span, h1, h2, h3, h4, h5, h6, p, pre, a, code, img, var, b, i, center, ol, ul, li, fieldset, form, label, legend, table, tbody, tfoot, thead, tr, th, td, article, aside, canvas, footer, header, nav, section, time, mark, audio, video
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  font inherit
  vertical-align baseline
 
body
  line-height 1
  
ol, ul
  list-style none
  
a:focus
  outline 0

table
  border-collapse collapse
  border-spacing 0
// End of reset


// Begin styles
// Variables
nav-height = 6vh

// Custom directives
site-header, site-gallery, site-nav
  display block


// Globals

// Color Variables
cherry = #e72844
nectarine = #f75337
lemon = #fed959
apple = #00a07e
plum-crazy = #524594
powder = #f85f76
proton-powder = #f62b69
electricity = #3c77b6

gray-cover = #6f6f6f

nav-offset = 5vh

// Display items
html, body
  box-sizing border-box
  font-family 'Arial', sans-serif

*, *:before, *:after
  box-sizing inherit   
  outline none
  
.hidden
  visibility hidden

.display-none
  display none

.clearfix:after
  content: ""
  display: table
  clear: both

  
// All links
a:link, a:visited
 text-decoration none    

// Home page
// Header
header
  height 6.5 vh
  margin-top .5vh  
  border-bottom 1vh solid black

// Header logo  
header img
  height 5.4vh
  margin-left 2vw

    
// Shopping cart
site-cart
  float right
  height 6vh
  width 8vw
  margin-right 3vw

site-cart .words
  text-align center
  line-height 6vh

// Cube
.wrap
  perspective: 32vw
  perspective-origin: 50% 0.5em;

.cart-cube
  position relative
  width: 7.5vw
  transform-style: preserve-3d;
  //animation spin 5s infinite linear

.cart-cube div
  position absolute
  width 7.5vw
  height 7.5vw
  box-shadow inset 0 0 1vw rgba(125,125,125,0.8)
  text-align center
  line-height 7.5vw

.back
  transform translateZ(-3.75vw) rotateY(180deg)

.right
  transform rotateY(-270deg) translateX(3.75vw)
  transform-origin top right;

.left
  transform rotateY(270deg) translateX(-3.75vw)
  transform-origin center left;

.top
  transform rotateX(-90deg) translateY(-3.75vw)
  transform-origin top center

.bottom
  transform rotateX(90deg) translateY(3.75vw)
  transform-origin bottom center

.front
  transform translateZ(3.75vw)

div.words
  color plum-crazy
  box-shadow none
  text-shadow 1px 1px 4px proton-powder
  transform translateZ(0)

@keyframes spin
   from {
        transform: rotateY(0)
   }
   to {
      transform:rotateY(360deg)
   }

//End of Cube

.cart-container
  color white
  position absolute
  left 0
  line-height 8vh
  width 100vw
  background gray-cover
  padding-left 1em

.checkout-options
  float left
  clear left

.cart-container a:nth-child(2)
  color cherry

.cart-container a:nth-child(3)
  color nectarine

.cart-container a:nth-child(4)
  color powder

.cart-container a:active
  background-color electricity

// Nav
nav  
  margin-top 1vh
  margin-left .25em
  min-height 8vh
  
nav.horizontal
  width: 100vw
  height nav-height
  min-height 0
  margin 0
  background black
  text-align justify
  
nav ul
  display inline
  width 100vw  
  max-width 40vw
  max-height 40vh
  overflow hidden  
  transition max-height 2s
  
nav ul.collapsed
  max-width 0
  transition max-width .2s

nav ul.height-collapse
  max-height 0  

nav.horizontal:after 
  content ""    
  width 87vw
  display inline-block

nav li
  display block
  margin-top 1vh
  
nav.horizontal li
  margin-top .5vh

nav li a
  padding 2vw
  text-transform uppercase
  font-weight 700
  font-size 7vw
  
nav li:nth-child(1) > a
  color proton-powder

nav li:nth-child(2) > a
  color electricity
  
nav li:nth-child(3) > a
  color plum-crazy

nav.horizontal li
  display inline-block

// End of Nav



// Main div
div.main
  position absolute
  height 93vh
  top 7vh
  left 0
  right 0
  z-index -1


// Gallery page
site-gallery
  position absolute
  width 100vw
  height 100%
  overflow hidden
  
img.gallery
  position absolute
  height: 100%  
  right -2em
  margin 0 auto  
  z-index -3
  opacity 1

img.gallery.front
  z-index 0
    
img.gallery.next
  z-index -2    
  
img.gallery.fade
  z-index -1
  opacity 0
  transition opacity cubic-bezier(.25, .25, .75, .75) .5s

.loading-gallery.done-loading
  display none

// End of gallery page

// Pages
.container
  padding-top nav-offset

// Shop page
#collection-container
  text-align center
  
div.poster-container
  width 100vw
  height 90vh
  margin 0 auto
  border-bottom 3vw solid black

img.poster
  height 75vh

.poster-container .pant-flavor, .poster-container .pant-price
  text-transform uppercase
  font-weight 700
  color black

// End shop page


// Product page
#product-container
  text-align center

  // Product gallery
#individual-gallery
  position relative
  overflow hidden
  
#gallery-holder
  position relative
  width 400%  
  margin-bottom 6vh

.individual-main
  height 81vh
  float left

#view-picker  
  position absolute
  margin 0 auto
  left 0
  right 0
  bottom 0.5vh

.gallery-picker
  appearance none
  width 3.75vh
  height 3.75vh
  border-radius 50%
  color black
  background black
  border .5vh solid black
      
.gallery-picker:checked
  background red
  border .5vh solid blue

  // End of product gallery
.product-title
    font-weight 700

.product-price
  margin-top 2vh
  max-width 30%
  color red

#toggle-details
  margin-top 2vh

.left-ui
  position absolute
  left 10vw
  padding 0  

.right-ui
  position absolute
  right 7.5vw
  
  // Buttons
.product-button
  border none
  background white
  padding 0
  z-index -1

  // End buttons
  
  // Item details  
#details
  position absolute
  text-align left
  width 100vw
  min-height 35vh
  z-index 5
  margin-top -7vh
  background rgba(111, 111, 111, 0.88)
  clear both
  display block
  
.detail-tab
  float left

.detail-tab label
  position relative
  margin-right 8vw
  color black

.detail-tab ul
  display none
  position absolute
  width 100vw
  left 0
  border-top .4vh solid white
  padding-top 1vh
  
[type=radio]:checked ~ label
  color white

[type=radio]:checked ~ label ~ ul
  display block
    
.detail-tab input
  display none
        
#product-column
  color white

#brand-column
  color gray

#care-column
  color black

#close-details
  position absolute
  bottom 0
  right 0
  color red
  
  // End of item details

#size-guide
  margin-top 7vh
  max-width 30%
  color blue

#sizemenu
  margin-top 7vh
  max-width 30%

  // Size Chart
#table-holder
  position absolute
  margin-top -7vh
  padding-bottom 4.5vh
  background rgba(111, 111, 111, 0.96)
    
table
  font-size 5vw
  border 1px solid black

caption
  text-align left
  
caption h1
  font-size 4.5vh
  font-weight 700

caption p
  padding-top 1.5vh
  padding-bottom .5vh
  font-size 3vh
  font-weight 400  
  
th, td
  border-collapse collapse
  
th
  font-weight 600
  border-right 2px solid black
  
td
  border 1px solid black  

#size-copy
  width 50%
  float left

  
#sizing-guide
  float right
  width 50%
  
  // End of Size Chart
  
#add-to-cart, #checkout-now
  margin-top 14vh
  margin-bottom 2vh

// End of product page

// Checkout page
#checkout-view
  
// End of checkout page

