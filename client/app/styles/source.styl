// Meyer reset
html, body, div, span, h1, h2, h3, h4, h5, h6, p, pre, a, code, img, var, b, i, center, ol, ul, li, fieldset, form, label, legend, table, tbody, tfoot, thead, tr, th, td, article, aside, canvas, footer, header, nav, section, time, mark, audio, video
  margin: 0
  padding: 0
  border: 0
  outline: 0
  font-size: 100%
  font: inherit
  vertical-align: baseline
 
body
  line-height: 1
  
ol, ul
  list-style: none
  
blockquote, q
  quotes: none
  
blockquote:before, blockquote:after, q:before, q:after
  content: ''
  content: none

a:focus
  outline: 0
table
  border-collapse: collapse
  border-spacing: 0
// End of reset

// Sprite function
make_sprite()
  for sheet in arguments
    sprites(sheet)

// Call the function on all the (renamed) spritesheets
make_sprite($spritesheet_sprites, spritesheet_sprites_a)
// End of sprite


// Cube
.wrap 
  perspective: 800px
  perspective-origin: 50% 100px;

.cart-cube
  position relative
  width: 200px
  transform-style: preserve-3d;
  animation spin 5s infinite linear

.cart-cube div
  position absolute
  width 200px
  height 200px
  box-shadow inset 0 0 30px rgba(125,125,125,0.8)
  text-align center
  line-height 200px

.back
  transform translateZ(-100px) rotateY(180deg)
  
.right
  transform rotateY(-270deg) translateX(100px)
  transform-origin top right;
  
.left
  transform rotateY(270deg) translateX(-100px)
  transform-origin center left;
 
.top
  transform rotateX(-90deg) translateY(-100px)
  transform-origin top center;

.bottom
  transform rotateX(90deg) translateY(100px)
  transform-origin bottom center

.front
  transform translateZ(100px)

div.words
  box-shadow none 
  text-shadow 2px 2px 3px rgb(255, 0, 0)
  // transform translateZ(-25px)

@keyframes spin {
  from {transform: rotateY(0);}
  to {transform:rotateY(360deg)}
}
//End of Cube

// Animation
.gallery-animate
  transition all cubic-bezier(1, .01, .33, 1) .5s
  opacity 0

.gallery-animate.displayed
  transition all cubic-bezier(1, .01, .57,1) 2s
  opacity 1

.fast-gray
  transition all cubic-bezier(.83, .04, .65, .93) .4s
  opacity 1

.fast-no-gray
  transition all cubic-bezier(.83, .04, .65, .93) .4s
  opacity 0
// End of animation


