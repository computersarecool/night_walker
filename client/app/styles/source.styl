@require 'nib'

// TODO: CDN Reset
// Meyer reset
html, body, div, span, h1, h2, h3, h4, h5, h6, p, pre, a, code, img, var, b, i, center, ol, ul, li, fieldset, form, label, legend, table, tbody, tfoot, thead, tr, th, td, article, aside, canvas, footer, header, nav, section, time, mark, audio, video
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  font inherit
  vertical-align baseline
 
body
  line-height 1
  
ol, ul
  list-style none
  
blockquote, q
  quotes none
  
blockquote:before, blockquote:after, q:before, q:after
  content ''
  content none

a:focus
  outline 0
table
  border-collapse collapse
  border-spacing 0
  
// End of reset




// Gallery Animation
img.gallery
  position absolute
  width: 85%
  top 10%
  z-index -2
  transition all cubic-bezier(.25, .25, .75, .75) .5s
  opacity 0
  
img.gallery.front
  z-index -1
  opacity 1
  
// End of gallery animation




