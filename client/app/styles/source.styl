@require 'nib'

// TODO: CDN Reset
// Meyer reset
html, body, div, span, h1, h2, h3, h4, h5, h6, p, pre, a, code, img, var, b, i, center, ol, ul, li, fieldset, form, label, legend, table, tbody, tfoot, thead, tr, th, td, article, aside, canvas, footer, header, nav, section, time, mark, audio, video
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  font inherit
  vertical-align baseline
 
body
  line-height 1
  
ol, ul
  list-style none
  
blockquote, q
  quotes none
  
blockquote:before, blockquote:after, q:before, q:after
  content ''
  content none

a:focus
  outline 0
table
  border-collapse collapse
  border-spacing 0
  
// End of reset



// Begin styles
// Custom directives
site-header, site-gallery, site-nav
  display block


// Globals  
html, body
  box-sizing border-box
  font-family 'Arial', sans-serif

*, *:before, *:after
  box-sizing inherit   

.hidden
  display none !important

  
// All links
a:link, a:visited
 text-decoration none    

  
// Header container
header
  height 6.5 vh
  margin-top .5vh  
  border-bottom 1vh solid black

      
// Header logo  
header img
  height 5.4vh
  margin-left 2vw

    
// Shopping cart
site-cart
  float right
  height 6vh
  width 8vw
  margin-right 3vw
  background rgba(20, 20, 255, .6)

site-cart .words
  text-align center
  line-height 6vh

  
// Nav
nav  
  margin-top 1vh
  margin-left .25em
  min-height 8vh
  
nav.horizontal
  width: 100vw
  height 6vh
  min-height 0
  margin 0
  background black
  text-align justify
  
nav ul
  display inline
  width 100vw  
  max-width 40vw
  max-height 40vh
  overflow hidden  
  transition max-height 2s
  
nav ul.collapsed
  max-width 0
  transition max-width .2s

nav ul.height-collapse
  max-height 0  

nav.horizontal:after 
  content ""    
  width 97vw
  display inline-block

nav li
  display block
  margin-top 1vh
  
nav.horizontal li
  margin-top .5vh

nav li a
  padding 2vw
  text-transform uppercase
  font-weight 700
  font-size 7vw
  
nav li:nth-child(1) > a
  color rgb(255, 0, 255)

nav li:nth-child(2) > a
  color rgb(15, 108, 255)
  
nav li:nth-child(3) > a
  color rgb(59, 223, 9)

nav.horizontal li
  display inline-block

// End of Nav


// Main div
div.main
  position absolute
  height 93vh
  top 7vh
  left 0
  right 0
  z-index -1


// Gallery Animation
site-gallery
  position absolute
  width 100vw
  height 100%
  overflow hidden
  
img.gallery
  position absolute
  height: 100%  
  right -2em
  margin 0 auto  
  z-index -3
  opacity 1
    
img.gallery.next
  z-index -2    
  
img.gallery.fade
  z-index -2
  opacity 0
  transition opacity cubic-bezier(.25, .25, .75, .75) .5s

img.gallery.front
  z-index -1

// End of gallery animation

  
// Shop page
#collection-container
  margin-top 6vh
  text-align center
  
div.poster-container
  width 100vw
  height 90vh
  margin 0 auto
  border-bottom 3vw solid black

img.poster
  height 75vh

.poster-container .pant-flavor, .poster-container .pant-price
  text-transform uppercase
  font-weight 700
  color black

// End shop page


// Product page
#product-container
  margin-top 6vh
  text-align center

.individual-main
  height 87vh

.product-title
    font-weight 700

.product-price
  position absolute
  left 10vw
  margin-top 2vh
  max-width 30%
  color red

#toggle-details
  position absolute
  right 8vw  
  margin-top 2vh

  // Item details  
#details
  position absolute
  text-align left
  width 100vw
  min-height 35vh
  z-index 5
  margin-top -7vh
  background rgba(111, 111, 111, 0.88)
  clear both
  display block
  
.detail-tab
  float left

.detail-tab label
  position relative
  margin-right 8vw
  color black

.detail-tab ul
  display none
  position absolute
  width 100vw
  left 0
  border-top .4vh solid white
  padding-top 1vh
  
[type=radio]:checked ~ label
  color white

[type=radio]:checked ~ label ~ ul
  display block
    
.detail-tab input
  display none
        
#product-column
  color white

#brand-column
  color gray

#care-column
  color black

#close-details
  position absolute
  bottom 0
  right 0
  color red
  
  // End of item details

#size-guide
  position absolute
  left 10vw
  margin-top 7vh
  max-width 30%
  color blue

#sizemenu
  position absolute
  right 8vw
  margin-top 7vh
  max-width 30%

  // Size Chart
#size-chart  
  background purple
  
  
  // End of Size Chart
  
#add-to-cart
  margin-top 14vh

// End of product page


// About page
#about-container
  margin-top 6vh

// End of about page


// Contact page
#contact-container
  margin-top 6vh

// End of contact page


// < 3/2 Aspect ratio
@media screen and (max-aspect-ratio: 320/510)
  header
    height 6vh

  header img
    height 4.7vh
  










  





