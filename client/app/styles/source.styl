site-cart .item-count
  text-align center
  color plum-crazy
  box-shadow none
  text-shadow 1px 1px 4px proton-powder
  transform translateZ(0)
  //End of Cube

.cart-container
  color white
  z-index 2
  margin-top .4em
  position fixed
  left 0
  font-size 1.1em
  line-height 1.5em
  width 100%
  background gray-cover

.checkout-options
  float left
  clear left

.cart-container p
  padding-left 9%

.cart-header
  border-bottom .125em solid white

.cart-container a
  color electricity

.cart-container a:active
  background-color electricity

