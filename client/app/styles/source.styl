// Selective Meyer reset
html, body, div, span, h1, h2, h3, h4, h5, h6, p, pre, a, code, img, var, b, i, center, ol, ul, li, fieldset, form, label, legend, table, tbody, tfoot, thead, tr, th, td, article, aside, canvas, footer, header, nav, section, time, mark, audio, video
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  font inherit
  vertical-align baseline
 
body
  line-height 1
  
ol, ul
  list-style none
  
a:focus
  outline 0

table
  border-collapse collapse
  border-spacing 0
// End of reset


// Begin styles
// Variables
nav-height = 6vh
cube-size = 7vw

// Custom directives
site-header, site-gallery, site-nav, size-guide
  display block


// Globals

// Color Variables
cherry = #c71b39
nectarine = #fa5132
lemon = #feda60
apple = #005b3a
electricity = #26599a
plum-crazy = #3f2c63
powder = #e45c68
proton-powder = #ed243f

gray-cover = #6f6f6f

// Widths and heights
nav-offset = 6vh

// Display items
html, body
  box-sizing border-box
  font-family 'Arial', sans-serif
  height 100%

*, *:before, *:after
  box-sizing inherit   
  outline none
  
.hidden
  visibility hidden

.display-none
  display none

.clearfix:after
  content: ""
  display: table
  clear: both

body
  display flex
  flex-direction column

// All links
a:link, a:visited
  text-decoration none

// Home page
// Header
site-header
  border-bottom .25em solid black

header
  padding-top .2em
  width 97%
  flex 0
  display flex

// Header logo  
header a.logo
  flex 1 0 auto
  width 80%
  padding-left .3em

img.header
  width 100%

// Modal cart
site-cart
  flex 0 1 auto
  width 15%
  position relative

// Cube
.wrap
  margin-left 25%
  bottom .1em
  margin-top .1em
  perspective: (cube-size * 3)
  perspective-origin: (cube-size / 2) (cube-size / 2)

.cart-cube
  position relative
  width cube-size
  height cube-size
  transform-style: preserve-3d;
  //animation spin 5s infinite linear

.cart-cube div
  position absolute
  width cube-size
  height cube-size
  box-shadow inset 0 0 1vw rgba(125,125,125,0.8)
  text-align center
  line-height cube-size

.back
  transform rotateY(180deg) translateZ(-(cube-size / 2))

.right
  transform-origin top right
  transform rotateY(-270deg) translateX((cube-size / 2))

.left
  transform-origin center left
  transform rotateY(270deg) translateX(-(cube-size / 2))

.top
  transform-origin top center
  transform rotateX(-90deg) translateY(-(cube-size / 2))

.bottom
  transform-origin bottom center
  transform rotateX(90deg) translateY((cube-size / 2))

.front
  transform translateZ(cube-size / 2)

// Option: Rotating cart
