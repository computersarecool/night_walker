@import 'gallery_sprite'

html, body, .main
  width 100%
  height 100%
  
body
  background white

.pant.container
  height 45%
  width 25%
  display inline-block
  vertical-align top
  position relative

.pant-text
  width 100%
  position absolute
  bottom 0
  text-align: center
  


.login
  height 50px
  width 50px
  float right

//Sprite
.pant-sprite
  position absolute
  width 40%
  max-width: 350px //Set to max res of image
  padding-bottom: 50%
  background-image url('../images/final_sprites/gallery_sprite.jpg')
  background-size: 300%

.blue-pant
  background-position 0 0

.gray-pant
  background-position 50% 0
  
.red-pant
  background-position 100% 0

.not-opaque 
  opacity 0
//End of sprite

  
//Animation
.gallery-animate
  transition all cubic-bezier(1, .01, .33, 1) .5s
  opacity 0

.gallery-animate.displayed
  transition all cubic-bezier(1, .01, .57,1) 2s
  opacity 1

.fast-gray
  transition all cubic-bezier(.83, .04, .65, .93) .4s
  opacity 1

.fast-no-gray
  transition all cubic-bezier(.83, .04, .65, .93) .4s
  opacity 0
//End of animation
