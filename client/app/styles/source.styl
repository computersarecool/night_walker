// End of Modal cart

// Nav
site-nav
  position relative
  z-index 5

nav
  position absolute
  float left
  z-index 1
  margin .25em 0 0 .5em

nav li
  margin-bottom .5em

nav li a
  text-transform uppercase
  font-weight 700
  font-size 1.5em

nav li:nth-child(1) > a
  color proton-powder

nav li:nth-child(2) > a
  color electricity

nav li:nth-child(3) > a
  color plum-crazy

nav.horizontal
  width: 100%
  height nav-height
  min-height 0
  margin 0
  text-align justify

nav ul
  transition max-height 2s
  
nav ul.collapsed
  max-width 0
  transition max-width .2s

nav ul.height-collapse
  max-height 0  

nav.horizontal:after 
  content ""    
  width 87vw
  display inline-block

nav.horizontal li
  margin-top .5vh
  display inline-block

// End of Nav

// Main div and pages
div.main
  flex 1
  position relative
  z-index -1
  opacity .99 // opacity added for z-index

// Gallery page
img.gallery
  position absolute
  height: 100%
  right -2em
  z-index -3
  opacity 1

img.gallery.front
  z-index 0
    
img.gallery.next
  z-index -2    
  
img.gallery.fade
  z-index -1
  opacity 0
  transition opacity cubic-bezier(.25, .25, .75, .75) .5s

.loading-gallery.done-loading
  display none

// End of gallery page


// Shop page
.collection.container
  text-align center
  
div.poster-container
  width 100vw
  height 90vh
  margin 0 auto
  border-bottom 3vw solid black

img.poster
  height 75vh

.poster-container .pant-flavor, .poster-container .pant-price
  text-transform uppercase
  font-weight 700
  color black

// End shop page


// Product page
.product.container
  text-align center
  overflow hidden

  // Product gallery
.individual-gallery
  position relative
  overflow hidden
  
.gallery-holder
  position relative
  width 400%
  padding-left 10%
  margin-bottom 6vh

.individual-main
  height 81vh
  float left
  padding-right 2.75em

.view-picker
  position absolute
  margin 0 auto
  left 0
  right 0
  bottom 0.5vh

.gallery-picker
  appearance none
  width 3.75vh
  height 3.75vh
  border-radius 50%
  color black
  background electricity
  border .5vh solid electricity
      
.gallery-picker:checked
  background electricity
  border .5vh solid proton-powder

  // End of product gallery

  // Lower page details
.product-title
  font-weight 700

.left-ui
  margin-top 1.5em
  float left
  clear right
  margin-left 1.3em

.right-ui
  margin-top 1.5em
  float right
  margin-right 1.3em

  // Buttons
.product-button
  border none
  background white
  padding 0
  z-index -1
  float right
  clear right

.product-select
  float right
  clear right

// Item details
#details
  position absolute
  text-align left
  width 100vw
  min-height 35vh
  z-index 5
  margin-top -7vh
  background rgba(111, 111, 111, 0.88)
  clear both
  display block
  
.detail-tab
  float left

.detail-tab label
  position relative
  margin-right 8vw
  color black

.detail-tab ul
  display none
  position absolute
  width 100vw
  left 0
  border-top .4vh solid white
  padding-top 1vh
  
[type=radio]:checked ~ label
  color white

[type=radio]:checked ~ label ~ ul
  display block
    
.detail-tab input
  display none
        
#product-column
  color white

#brand-column
  color gray

#care-column
  color black

#close-details
  position absolute
  bottom 0
  right 0
  color red
  
// End of item details

#sizemenu
  margin-top 7vh
  max-width 30%

  // Size Chart
#table-holder
  position absolute
  margin-top -7vh
  padding-bottom 4.5vh
  background rgba(111, 111, 111, 0.96)
    
table
  font-size 5vw
  border 1px solid black

caption
  text-align left
  
caption h1
  font-size 4.5vh
  font-weight 700

caption p
  padding-top 1.5vh
  padding-bottom .5vh
  font-size 3vh
  font-weight 400  
  
th, td
  border-collapse collapse
  
th
  font-weight 600
  border-right 2px solid black
  
td
  border 1px solid black  

#size-copy
  width 50%
  float left

  
#sizing-guide
  float right
  width 50%
  
  // End of Size Chart
  
// End of product page

// About page
.about.container
  padding-top nav-offset
// End of about page


// < 3/2 Aspect ratio
@media screen and (max-aspect-ratio: 320/510)
  header
    height 6vh

  header img
    height 4.7vh
  
